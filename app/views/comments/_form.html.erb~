<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
   
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :your_comment, :size => "30x5" %>
    
  </div>
   
  <div class="actions">
    <%= f.submit "Post"%> &nbsp;<%= link_to 'New Post', new_post_path %>

  </div>
<% end %>
